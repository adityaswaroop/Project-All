= form_for(@role) do |f|
  - if @role.errors.any?
    #error_explanation
      %h2
        = pluralize(@role.errors.count, "error")
        prohibited this role from being saved:
      %ul
        - @role.errors.full_messages.each do |msg|
          %li= msg
  %p
    = f.label :role_type
    %br/
    = f.text_field :role_type
  %p= f.submit
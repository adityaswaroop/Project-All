%h1 Roles
%p= link_to 'New Role', new_role_path
%table{:cellpadding => "0", :cellspacing => "0", :width => "300px", :border => "1px solid #000000"}
  %tr
    %td{:width => "100px"}
      Role Type
    %td{:width => "200px", :colspan => '2'}
      Operations
  - @roles.each do |role|
    %tr
      %td{:width => "100px"}= role.role_type
      %td{:width => "100px"}= link_to 'Show', role
      %td{:width => "100px"}= link_to 'Edit', edit_role_path(role)
%h1 Bulk Role Assignment
= form_tag do
  %table{:cellpadding => "0", :cellspacing => "0", :width => "100%"}
    %tr
      %td{:width => "100px"}
        Users
      %td
        Roles
    - @users.each do |user|
      %tr
        %td{:width => "100px"}= user.name
        = hidden_field_tag("users[][id]", user.id)
        - @roles.each do |role|
          %td{:width => "5px"}= check_box_tag("users[][roles][]",role.id, user.roles.include?(role))
          %td{:width => "95px"}= label_tag(:role, "#{role.role_type}")

    %tr
      %td
        = submit_tag("Update")

